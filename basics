# 1. Simple Class & Object
class Farmer:
    def __init__(self, name, crop):
        self.name = name
        self.crop = crop

    def details(self):
        return f"ğŸ‘¨â€ğŸŒ¾ Farmer {self.name} grows {self.crop}."

