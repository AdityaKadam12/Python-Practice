print(farmer1.details())

print("\n------------------")

# 2. Class Variables vs Instance Variables
class Farm:
    location = "Maharashtra"  # class variable

    def __init__(self, owner, size):
        self.owner = owner
        self.size = size  # instance variable

farm1 = Farm("Aditya", "10 acres")
farm2 = Farm("Ramesh", "5 acres")
print(f"{farm1.owner} â†’ {farm1.size}, Location: {farm1.location}")
print(f"{farm2.owner} â†’ {farm2.size}, Location: {farm2.location}")

print("\n------------------")

# 3. Inheritance
class Crop:
    def grow(self):
        return "ğŸŒ± Crop is growing."

class Wheat(Crop):
    def grow(self):
        return "ğŸŒ¾ Wheat is growing fast."

c = Wheat()
print(c.grow())

print("\n------------------")

# 4. Multiple Inheritance
class Soil:
    def soil_info(self):
        return "ğŸª¨ Soil contains nutrients."

class Weather:
    def weather_info(self):
        return "â˜€ï¸ Weather is sunny."

class FarmSystem(Soil, Weather):
    pass

fs = FarmSystem()
print(fs.soil_info())
print(fs.weather_info())

print("\n------------------")

# 5. Polymorphism
class Cow:
    def sound(self):
        return "ğŸ„ Moo"

class Dog:
    def sound(self):
        return "ğŸ• Bark"

for animal in (Cow(), Dog()):
    print(animal.sound())

print("\n------------------")

# 6. Encapsulation
class Account:
    def __init__(self, balance):
        self.__balance = balance  # private variable

    def deposit(self, amount):
        self.__balance += amount

    def get_balance(self):
        return self.__balance

acc = Account(1000)
acc.deposit(500)
print(f"ğŸ’° Account Balance: {acc.get_balance()}")

print("\n------------------")

# 7. Abstraction using Abstract Class
from abc import ABC, abstractmethod

class Machine(ABC):
    @abstractmethod
    def operate(self):
        pass

class Tractor(Machine):
    def operate(self):
        return "ğŸšœ Tractor is plowing the field."

tractor = Tractor()
print(tractor.operate())

print("\n------------------")

# 8. Method Overloading (Python way using default args)
class Calculator:
    def add(self, a, b=0, c=0):
        return a + b + c

calc = Calculator()
print("Add 2 numbers:", calc.add(5, 10))
print("Add 3 numbers:", calc.add(5, 10, 15))

print("\n------------------")

