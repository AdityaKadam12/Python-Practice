# 6. Simple Class
class Farmer:
    def __init__(self, name, crop):
        self.name = name
        self.crop = crop
    
    def show_details(self):
        return f"ğŸ‘¨â€ğŸŒ¾ {self.name} grows {self.crop}"

farmer1 = Farmer("Aditya", "Sugarcane")
print(farmer1.show_details())

print("\n------------------")

# 7. Class with Methods
class BankAccount:
    def __init__(self, owner, balance=0):
        self.owner = owner
        self.balance = balance
    
    def deposit(self, amount):
        self.balance += amount
        return f"ğŸ’° {amount} deposited. New Balance = {self.balance}"
    
    def withdraw(self, amount):
        if amount <= self.balance:
            self.balance -= amount
            return f"ğŸ’¸ {amount} withdrawn. Remaining Balance = {self.balance}"
        else:
            return "âš ï¸ Insufficient balance!"

account = BankAccount("Aditya", 1000)
print(account.deposit(500))
print(account.withdraw(300))
print(account.withdraw(2000))

print("\n------------------")

# 8. Inheritance
class Animal:
    def sound(self):
        return "Some sound"

class Cow(Animal):
    def sound(self):
        return "ğŸ„ Moo Moo"

class Dog(Animal):
    def sound(self):
        return "ğŸ¶ Woof Woof"

cow = Cow()
dog = Dog()
print("Cow Sound:", cow.sound())
print("Dog Sound:", dog.sound())

print("\n------------------")

# 9. Polymorphism
for animal in [Cow(), Dog()]:
    print(animal.sound())

print("\n------------------")

# 10. Encapsulation
class Crop:
    def __init__(self, name):
        self.__name = name  # private variable
    
    def get_crop(self):
        return f"ğŸŒ¾ Crop: {self.__name}"

crop1 = Crop("Wheat")
print(crop1.get_crop())

print("\n------------------")

