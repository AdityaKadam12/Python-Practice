# 9. Dictionary
farmer = {"name": "Aditya", "crop": "Sugarcane", "soil": "Black"}
print("üë®‚Äçüåæ Farmer Dictionary:", farmer)
print("Crop:", farmer["crop"])

print("\n------------------")

# 10. Nested Data Structures
farm_data = {
    "farmer": "Aditya",
    "fields": [
        {"crop": "Wheat", "area": "2 acres"},
        {"crop": "Rice", "area": "1.5 acres"}
    ]
}
print("üåæ Farm Data:", farm_data)

print("\n------------------")

# 11. Dictionary Methods
print("All Keys:", farmer.keys())
print("All Values:", farmer.values())

print("\n------------------")

# 12. List Comprehension
squares = [x**2 for x in range(1, 6)]
print("üìê Squares:", squares)

print("\n------------------")

# 13. Set Operations
set_a = {1, 2, 3}
set_b = {3, 4, 5}
print("Union:", set_a | set_b)
print("Intersection:", set_a & set_b)

print("\n------------------")

# 14. Dictionary Comprehension
crops = ["Wheat", "Rice", "Sugarcane"]
prices = [2000, 3000, 3500]
crop_price = {c: p for c, p in zip(crops, prices)}
print("üí∞ Crop Price Dictionary:", crop_price)

print("\n------------------")

# 15. Deleting Files
import os
if os.path.exists("sample.txt"):
    os.remove("sample.txt")
    print("üóëÔ∏è 'sample.txt' deleted.")
else:
    print("‚ö†Ô∏è File does not exist.")


# -------------------------
# Python Practice - Functions & OOP
# -------------------------

# 1. Simple Function
def greet(name):
    return f"Hello {name}, welcome to Python Practice! üå±"

print(greet("Aditya"))

print("\n------------------")

# 2. Function with Default Argument
def area_circle(radius, pi=3.14):
    return pi * radius * radius

print("üîµ Area of Circle:", area_circle(5))
print("üîµ Area with custom pi:", area_circle(5, 3.14159))

print("\n------------------")

# 3. Function with Multiple Arguments
def farmer_info(name, crop, acres):
    return f"üë®‚Äçüåæ Farmer {name} grows {crop} on {acres} acres."

print(farmer_info("Aditya", "Sugarcane", 2.5))

print("\n------------------")

# 4. Function with *args
def add_numbers(*args):
    return sum(args)

print("‚ûï Sum:", add_numbers(10, 20, 30, 40))

print("\n------------------")

# 5. Function with **kwargs
def farm_details(**kwargs):
    for key, value in kwargs.items():
        print(f"{key}: {value}")

farm_details(name="Aditya", crop="Rice", soil="Black Soil")

print("\n==================")
# üìò OOPS PRACTICE
print("üìò PRACTICING OBJECT ORIENTED PROGRAMMING")
print("==================\n")

# 6. Simple Class
class Farmer:
    def __init__(self, name, crop):
        self.name = name
        self.crop = crop
    
    def show_details(self):
        return f"üë®‚Äçüåæ {self.name} grows {self.crop}"

farmer1 = Farmer("Aditya", "Sugarcane")
print(farmer1.show_details())

print("\n------------------")

# 7. Class with Methods
class BankAccount:
    def __init__(self, owner, balance=0):
        self.owner = owner
        self.balance = balance
    
    def deposit(self, amount):
        self.balance += amount
        return f"üí∞ {amount} deposited. New Balance = {self.balance}"
    
    def withdraw(self, amount):
        if amount <= self.balance:
            self.balance -= amount
            return f"üí∏ {amount} withdrawn. Remaining Balance = {self.balance}"
        else:
            return "‚ö†Ô∏è Insufficient balance!"

account = BankAccount("Aditya", 1000)
print(account.deposit(500))
print(account.withdraw(300))
print(account.withdraw(2000))

print("\n------------------")

# 8. Inheritance
class Animal:
    def sound(self):
        return "Some sound"

class Cow(Animal):
    def sound(self):
        return "üêÑ Moo Moo"

class Dog(Animal):
    def sound(self):
        return "üê∂ Woof Woof"

cow = Cow()
dog = Dog()
print("Cow Sound:", cow.sound())
print("Dog Sound:", dog.sound())

print("\n------------------")

# 9. Polymorphism
for animal in [Cow(), Dog()]:
    print(animal.sound())

print("\n------------------")

# 10. Encapsulation
class Crop:
    def __init__(self, name):
        self.__name = name  # private variable
    
    def get_crop(self):
        return f"üåæ Crop: {self.__name}"

crop1 = Crop("Wheat")
print(crop1.get_crop())

print("\n------------------")

# 11. Static Method
class MathUtils:
    @staticmethod
    def square(x):
        return x * x

print("üìê Square of 6:", MathUtils.square(6))

print("\n------------------")

# 12. Class Variables
class Farm:
    total_farms = 0
    
    def __init__(self, name):
        self.name = name
        Farm.total_farms += 1

farm1 = Farm("GreenLand")
farm2 = Farm("AgroFarm")
print("üè° Total Farms:", Farm.total_farms)

print("\n------------------")

# 13. Operator Overloading
class Box:
    def __init__(self, value):
        self.value = value
    
    def __add__(self, other):
        return Box(self.value + other.value)
    
    def __str__(self):
        return f"üì¶ Box Value: {self.value}"

b1 = Box(10)
b2 = Box(20)
b3 = b1 + b2
print(b3)

print("\n------------------")

# 14. Abstract Class
from abc import ABC, abstractmethod

class Vehicle(ABC):
    @abstractmethod
    def move(self):
        pass

class Tractor(Vehicle):
    def move(self):
        return "üöú Tractor is moving"

tractor = Tractor()
print(tractor.move())

print("\n------------------")

# 15. Multiple Inheritance
class A:
    def featureA(self):
        return "Feature A"

class B:
    def featureB(self):
        return "Feature B"

class C(A, B):
    def featureC(self):
        return "Feature C"

obj = C()
print(obj.featureA(), obj.featureB(), obj.featureC())



# -------------------------
# Python Practice - Modules, Libraries & Exception Handling
# -------------------------

import math
import random
import datetime

print("üìò MODULES, LIBRARIES & EXCEPTION HANDLING PRACTICE")
print("====================================================\n")

# 1. Using math module
print("üî¢ Math Module Examples:")
print("Square root of 16:", math.sqrt(16))
print("Factorial of 5:", math.factorial(5))
print("Power 2^3:", math.pow(2, 3))
print("Pi value:", math.pi)

print("\n------------------")

# 2. Using random module
print("üé≤ Random Module Examples:")
print("Random integer (1-10):", random.randint(1, 10))
print("Random float (0-1):", random.random())
print("Random choice:", random.choice(['Wheat', 'Rice', 'Sugarcane']))

print("\n------------------")

# 3. Using datetime module
today = datetime.date.today()
now = datetime.datetime.now()
print("üìÖ Today's Date:", today)
print("‚è∞ Current Time:", now.strftime("%H:%M:%S"))

print("\n------------------")

# 4. Importing specific functions
from math import ceil, floor
print("Ceil of 7.4:", ceil(7.4))
print("Floor of 7.4:", floor(7.4))

print("\n==================")
# üìò EXCEPTION HANDLING
print("üìò PRACTICING EXCEPTION HANDLING")
print("==================\n")

# 5. Basic try-except
try:
    x = int("Hello")
except ValueError:
    print("‚ö†Ô∏è ValueError: Cannot convert string to int")

print("\n------------------")

# 6. Handling multiple exceptions
try:
    num = 10 / 0
except ZeroDivisionError:
    print("‚ö†Ô∏è Cannot divide by zero")
except Exception as e:
    print("‚ö†Ô∏è Error:", e)

print("\n------------------")

# 7. Try-Except-Finally
try:
    f = open("sample.txt", "r")
    print(f.read())
except FileNotFoundError:
    print("‚ö†Ô∏è File not found")
finally:
    print("‚úÖ File handling completed")

print("\n------------------")

# 8. Custom Exception
class LowBalanceError(Exception):
    pass

def withdraw(balance, amount):
    if amount > balance:
        raise LowBalanceError("‚ö†Ô∏è Not enough balance!")
    return balance - amount

try:
    print("Remaining balance:", withdraw(1000, 1500))
except LowBalanceError as e:
    print(e)

print("\n------------------")

# 9. Else block in exception
try:
    result = 20 / 5
except ZeroDivisionError:
    print("‚ö†Ô∏è Division by zero")
else:
    print("‚úÖ Division successful:", result)

print("\n------------------")

# 10. Using assert
def check_age(age):
    assert age >= 18, "‚ö†Ô∏è Age must be 18 or older"
    return "‚úÖ You are eligible"

try:
    print(check_age(16))
except AssertionError as e:
    print(e)

print("\n------------------")

# 11. Using pass in exception
try:
    num = int("Python")
except ValueError:
    pass  # ignore error
print("Program continues smoothly ‚úÖ")

print("\n------------------")

# 12. Exception inside loop
numbers = [10, 0, 5]
for n in numbers:
    try:
        print("100 /", n, "=", 100/n)
    except ZeroDivisionError:
        print("‚ö†Ô∏è Skipped division by zero")


# -------------------------
# Python Practice - File Handling
# -------------------------

print("üìò FILE HANDLING PRACTICE")
print("==========================\n")

# 1. Writing to a file
with open("sample.txt", "w") as f:
    f.write("Hello Farmers!\n")
    f.write("This is a fertilizer recommendation practice file.\n")
print("‚úÖ File 'sample.txt' created and written.")

print("\n------------------")

# 2. Reading from a file
with open("sample.txt", "r") as f:
    content = f.read()
print("üìñ File Content:\n", content)

print("\n------------------")

# 3. Reading line by line
with open("sample.txt", "r") as f:
    print("üìñ Reading line by line:")
    for line in f:
        print(line.strip())

print("\n------------------")

# 4. Appending to a file
with open("sample.txt", "a") as f:
    f.write("Adding more fertilizer data...\n")
print("‚úÖ Data appended to 'sample.txt'")

print("\n------------------")

# 5. Read after append
with open("sample.txt", "r") as f:
    print("üìñ Updated File Content:\n", f.read())

print("\n------------------")

# 6. Writing multiple lines
lines = ["Nitrogen improves leaf growth\n", "Phosphorus supports roots\n", "Potassium improves fruit quality\n"]
with open("nutrients.txt", "w") as f:
    f.writelines(lines)
print("‚úÖ Multiple lines written to 'nutrients.txt'")

print("\n------------------")

# 7. Reading multiple lines
with open("nutrients.txt", "r") as f:
    print("üìñ Nutrients File Content:")
    for line in f.readlines():
        print(line.strip())

print("\n------------------")

# 8. File pointer usage (tell & seek)
with open("sample.txt", "r") as f:
    print("üîé File pointer position:", f.tell())
    print("First 5 characters:", f.read(5))
    print("üîé File pointer after read:", f.tell())
    f.seek(0)
    print("üìñ After reset with seek():", f.read(10))

print("\n------------------")

# 9. Handling file not found error
try:
    with open("missing.txt", "r") as f:
        print(f.read())
except FileNotFoundError:
    print("‚ö†Ô∏è File 'missing.txt' not found")

print("\n------------------")

# 10. Using with block for auto close
with open("auto.txt", "w") as f:
    f.write("This file will auto close.")
print("‚úÖ 'auto.txt' created using with block")

print("\n------------------")

# 11. Copy content from one file to another
with open("sample.txt", "r") as f1, open("copy_sample.txt", "w") as f2:
    for line in f1:
        f2.write(line)
print("‚úÖ File copied to 'copy_sample.txt'")

print("\n------------------")

# 12. Delete a file
import os
if os.path.exists("auto.txt"):
    os.remove("auto.txt")
    print("üóëÔ∏è 'auto.txt' deleted")
else:
    print("‚ö†Ô∏è File not found for deletion")
